<body>
    <%- include('./head/nav', {sess:sess})%>

  <div id="title_name">
    <h1>파지 팜</h1>
  </div>

  <%- include('./head/serchBar')%>

  <div>
    <div id="main_body">
      <div id="side_nav">
        <div id="side_nav_body">
          <div style="padding: 5px;">
            <p class="category_list">카테고리</p>
            <p id="like" onclick="select_category(1)" style="font-weight: bold;">인기상품</p>
            <p id="last" onclick="select_category(2)">마감임박</p>
            <p id="direct" onclick="select_category(3)">직거래가능상품</p>
            <p id="potato" onclick="select_category(4)">감자</p>
            <p id="sweet" onclick="select_category(5)">고구마</p>
            <p id="mush" onclick="select_category(6)">버섯</p>
            <p id="pumkin" onclick="select_category(7)">호박</p>
            <p id="onion" onclick="select_category(8)">양파</p>

          </div>
        </div>
      </div>

      <div id="main_title">
        
        <h1>"<%= serchValue%>" 에 대한 검색 결과</h1>
          
          <% if(serchList.length <= 0 ){%>
            <h5 style="margin-top: 30px;">검색결과가 없습니다...</h5>
            <br>
            <p>다시 검색 해주세요</p>
          <%}else{%>
            <div class="product_row">
                <% for(var data of serchList){%>
                    <a href="/product/<%= data.product_num%>">
                        <div class="product_item">
                          <img src="../images/야채.png" alt="상품이미지" width="200" height="200" id="product_img">
                          <span><%= data.product_name%></span>
                          <div class="product_content">
                            <del class="price_text price_cancle"><%= data.product_price+ 30000%></del><span
                              class="price_text"><%= data.product_price%>원</span>
                          </div>
                        </div>
                      </a>
      
                <%}%>
                </div>
          <%}%>
          
          
        

        
      </div>
    </div>

  </div>
</body>

<script>
    function select_category(count){
    switch (count){
      case 1:
        location.href="/"
        break;
      case 2:
        location.href="/last"
        break;
      case 3:
        location.href="/direct"
        break;
      case 4: 
        location.href="/potato"
        break;
      case 5:
        location.href="/sweet"
        break;
      case 6:
        location.href="/mush"
        break;
      case 7:
        location.href="/pumkin"
        break;
      case 8:
        location.href="/onion"
        break;
      
    }
  }
</script>
